{
    "name": "sanity/sanity-php",
    "description": "PHP library for the Sanity API",
    "type": "library",
    "scripts": {
        "ecs": "vendor/bin/check",
        "ecs:fix": "vendor/bin/check --fix",
        "rector": "vendor/bin/rector process lib --dry-run",
        "rector:fix": "vendor/bin/rector process lib",
        "phpunit": "vendor/bin/phpunit",
        "test": [
            "@phpunit",
            "@ecs"
        ]
    },
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6.0",
        "symplify/easy-coding-standard": "*",
        "rector/rector": "^0.19.2"
    },
    "autoload": {
        "psr-4": {
            "Sanity\\" : "lib/",
            "SanityTest\\": "test/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Sanity.io",
            "email": "hello@sanity.io"
        }
    ]
}
