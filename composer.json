{
    "name": "sanity/sanity",
    "description": "PHP library for the Sanity API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sanity.io",
            "email": "hello@sanity.io"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Sanity\\" : "src/",
            "SanityTest\\": "tests/"
        }
    },
    "scripts": {
        "cs": "php-cs-fixer fix --dry-run --diff",
        "phpunit": "vendor/bin/phpunit",
        "test": [
            "@phpunit",
            "@cs"
        ]
    },
    "scripts-descriptions": {
        "cs": "Check coding standard",
        "phpunit": "Run unit tests",
        "test": "Run CI-suite"
    }
}
