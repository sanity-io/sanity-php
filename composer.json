{
    "name": "sanity/sanity-php",
    "description": "PHP library for the Sanity API",
    "type": "library",
    "scripts": {
        "cs": "vendor/bin/phpcs lib",
        "phpunit": "vendor/bin/phpunit",
        "test": [
            "@phpunit",
            "@cs"
        ]
    },
    "require": {
        "php": ">=5.6",
        "guzzlehttp/guzzle": "^6.2|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^2.8"
    },
    "autoload": {
        "psr-4": {
            "Sanity\\" : "lib/",
            "SanityTest\\": "test/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Sanity.io",
            "email": "hello@sanity.io"
        }
    ]
}
